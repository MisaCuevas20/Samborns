@model IEnumerable<WebMVC_Samborns.Models.Entities.Empleados>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create" class="btn btn-primary btn-sm">Agregar</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nombre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Edad)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FechaIngreso)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IdArea)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IdAreaNavigation.Nombre)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Edad) Años
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FechaIngreso)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IdAreaNavigation.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IdAreaNavigation.Nombre)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
